# Docker Environment Variables
# Copy this to .env for Docker deployments

# Database (automatic connection within Docker network)
DATABASE_URL=postgres://eventscrape:eventscrape_dev@postgres:5432/eventscrape
POSTGRES_PASSWORD=eventscrape_dev

# Redis (automatic connection within Docker network)
REDIS_URL=redis://redis:6379

# API Configuration
PORT=3001
NODE_ENV=production

# Admin UI Configuration
# For local development
VITE_API_URL=http://localhost:3001/api
# For production with domain
# VITE_API_URL=https://api.yourdomain.com

# Worker Configuration
PLAYWRIGHT_HEADLESS=true
EXPORT_DIR=/data/exports
RATE_LIMIT_PER_MIN=60

# Optional: WordPress Integration
WORDPRESS_BASE_URL=https://your-wordpress-site.com
WORDPRESS_USERNAME=your-username
WORDPRESS_APP_PASSWORD=your-app-password